<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PoliticalPreparedness" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
    </style>

    <style name="App.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">

    </style>

    <style name="App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:layout_height">65dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>


    <style name="App.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/cousine_bold</item>
    </style>

    <style name="App.TebLayoutText" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/cousine_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="App.Description" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/cousine</item>
    </style>


    <style name="App.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="fontFamily">@font/cousine</item>
        <item name="colorAccent">@color/blue</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="App.InputDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/black</item>
        <item name="fontFamily">@font/cousine</item>
        <item name="colorAccent">@color/blue</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

</resources>